<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <div>
        <h1 align="center">Student Details</h1>
        <button onclick="location.href='/add-student'">Add Student</button>
    </div>

    <table border="1" cellSpacing="0" cellPadding="10" width="600px" align="center">
        <thead>
            <tr>
                <th>No</th>
                <th>Name</th>
                <th>GRID</th>
                <th>Course</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody align="center">
            <% students.map((student)=>{ %>
                <tr>
                    <td>
                        <%= student.id %>
                    </td>
                    <td>
                        <%= student.name %>
                    </td>
                    <td>
                        <%= student.course %>
                    </td>
                    <td>
                        <%= student.grid %>
                    </td>
                    <td>
                        <a href="/edit-student?stdId=<%= student.id %>">Edit</a>
                        <a href="/delete-student?stdId=<%= student.id %>">Delete</a>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</body>

</html>