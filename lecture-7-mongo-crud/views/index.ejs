<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
    <title>Document</title>
</head>

<body>
    <h1 class="text-center py-3">Student Form</h1>
    <div class="d-flex justify-content-center">
        <form action="/add-student" method="post" class="w-50">
            <div>
                <label for="name" class="form-label fs-4">Name</label>
                <input type="text" name="name" class="form-control" id="name">
            </div>
            <div>
                <label for="age" class="form-label fs-4">Age</label>
                <input type="number" class="form-control" name="age" id="age">
            </div>
            <div>
                <label for="email" class="form-label fs-4">Email</label>
                <input type="email"  class="form-control" name="email" id="email">
            </div>
            <div>
                <label for="city" class="form-label fs-4">City</label>
                <select name="city" id="city" class="form-control">
                    <option value="" class="fs-4">select city</option>
                    <option value="Surat">Surat</option>
                    <option value="Ahmedabad">Ahmedabad</option>
                    <option value="Rajkot">Rajkot</option>
                    <option value="Gandhinagar">Gandhinagar</option>
                </select>
            </div>
            <button class="btn btn-primary mt-3">submit</button>
        </form>

    </div>
    <div class="container my-5">
        <table class="table table-striped table-dark table-hover">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Age</th>
                    <th>City</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% students.map((student, idx)=>{ %>
                    <tr>
                        <td>
                            <%= idx + 1 %>
                        </td>
                        <td>
                            <%= student.name %>
                        </td>
                        <td>
                            <%= student.email %>
                        </td>
                        <td>
                            <%= student.age %>
                        </td>
                        <td>
                            <%= student.city %>
                        </td>
                        <td>
                            <button class="btn btn-danger" onclick="deleteStudent('<%= student.id%>')">Delete</button>
                            <a class="btn btn-success" href="/edit-student?editId=<%= student.id%>">Edit</a>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        const deleteStudent = (id) => {
            Swal.fire({
                title: "Are you sure ?",
                showCancelButton: true,
                confirmButtonText: "Yes",
                denyButtonText: "cancel"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = `/delete-student?deleteId=${id}`
                }
            });
        }
       
    </script>
</body>
</html>