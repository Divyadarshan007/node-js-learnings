<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
    <title>Document</title>
</head>

<body>

    <div class="container mt-5">
        <div class="p-4 d-flex justify-content-end">
            <a href="/" class="btn btn-secondary px-5 ">add</a>
        </div>
        <table class="table table-striped table-hover table-dark text-center">
            <thead>
                <tr>
                    <th>No.</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Age</th>
                    <th>Avatar</th>
                    <th>City</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% students.map((student, idx)=>{ %>
                    <tr>
                        <td>
                            <%= idx+1 %>
                        </td>
                        <td>
                            <%= student.name %>
                        </td>
                        <td>
                            <%= student.email %>
                        </td>
                        <td>
                            <%= student.age %>
                        </td>
                        <td><img src="<%= student.photo %>" width="100px" alt="<%= student.name%>"></td>
                        <td>
                            <%= student.city %>
                        </td>
                        <td>
                            <div class="d-flex gap-2 justify-content-center">
                                <button onclick="window.location.href='/edit-student/<%= student.id %>'" class="btn btn-success">Edit</button>
                                <button class="btn btn-danger" onclick="window.location.href='/delete-student/<%= student.id %>'">Delete</button>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>
</body>

</html>